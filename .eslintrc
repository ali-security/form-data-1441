{
  "root": true,

  "extends": "@ljharb/eslint-config/node/0.4",

  "rules": {
    "callback-return": "warn",
    "camelcase": "off",
    "eqeqeq": ["error", "always", {"null": "ignore"}],
    "func-style": "off",
    "id-length": "off",
    "indent": [2, 2, {"SwitchCase": 1}],
    "max-lines": "off",
    "no-param-reassign": "warn",
    "no-underscore-dangle": "off",
    "sort-keys": "off",
  },
}
