{
  "extends": "@ljharb/eslint-config/node/0.4",
  "rules": {
    "callback-return": "warn",
    "camelcase": "warn",
    "func-style": "warn",
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "id-length": "warn",
    "max-lines": "off",
    "no-invalid-this": "warn",
    "no-param-reassign": "warn",
    "no-underscore-dangle": "warn",
    "sort-keys": "warn",

    "indent": [2, 2, {"SwitchCase": 1}],
  },
  "env": {
    "node": true
  },
  "ignorePatterns": [
    "node_modules/*",
    "index.d.ts",
    "coverage",
  ],
}
